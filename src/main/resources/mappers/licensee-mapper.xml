<!-- 영화관 사진 보기 -->
<select id="selectFile" resultMap="SearchBoardFileSet">
		SELECT *
		FROM BOARD_FILE
		WHERE
		FILE_LEVEL=1 OR FILE_LEVEL = 2
		ORDER BY FILE_LEVEL
	</select>
	
	

