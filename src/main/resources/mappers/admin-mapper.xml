<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 인소진 추가 관리자 맵퍼 -->
<mapper namespace="Admin">
	<resultMap type="Member" id="searchResultSet">
		<id property="mid" column="MID" />
		<result property="email" column="EMAIL" />
		<result property="user_pwd" column="USER_PWD" />
		<result property="user_name" column="USER_NAME" />
		<result property="birthday" column="BIRTHDAY" />
		<result property="gender" column="GENDER" />
		<result property="phone" column="PHONE" />
		<result property="user_class" column="USER_CLASS" />
		<result property="status" column="STATUS" />
		<result property="login_class" column="LOGIN_CLASS" />
		<result property="blacklist_status" column="BLACKLIST_CLASS" />
		<result property="join_date" column="JOIN_DATE" />
		<result property="withdraw_date" column="WITHDRAW_DATE" />
		<result property="nickname" column="NICKNAME" />
	</resultMap>

	<!-- 회원 전체 조회 인소진-->
	<select id="searchAll" resultMap="searchResultSet">
		SELECT *
		FROM MEMBER
		ORDER BY SUBSTR(MID,2)*1
	</select>
	
	<!-- 일반 회원 조회 인소진 -->
	<select id="searchBu" resultMap="searchResultSet">
		SELECT *
		FROM MEMBER
		WHERE USER_CLASS='BUYER'
		ORDER BY SUBSTR(MID,2)*1
	</select>
	
	<!-- 판매자 회원 조회 인소진 -->
	<select id="searchSe" resultMap="searchResultSet">
		SELECT *
		FROM MEMBER
		WHERE USER_CLASS='SELLER'
		ORDER BY SUBSTR(MID,2)*1
	</select>
	
	<!-- 일반 회원 조회 카운트 결과 인소진 -->
	<select id="countAll" resultType="_int">
		SELECT COUNT(*)
		FROM MEMBER
	</select>
	
	<!-- 일반 회원 조회 카운트 결과 인소진 -->
	<select id="countBu" resultType="_int">
		SELECT COUNT(*)
		FROM MEMBER
		WHERE USER_CLASS='BUYER'
	</select>
	
	<!-- 판매자 회원 조회 카운트 결과 인소진 -->
	<select id="countSe" resultType="_int">
		SELECT COUNT(*)
		FROM MEMBER
		WHERE USER_CLASS='SELLER'
	</select>
</mapper>